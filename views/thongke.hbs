<div style="margin-top: 100px;">
    <form method="GET" class="col-11 mb-auto" >
            <div class="row">
                {{#if CN}}
                {{#if user.isAdmin}}
                <select class="custom-select col-sm-2 col-form-label" name="CN" style="height: 35px;">
                    {{#each dsCN}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <select class="custom-select col-sm-1 col-form-label" name="type" id="type" style="height: 35px;">
                    <option value="1" selected>Năm</option>
                    <option value="2">Quý</option>
                    <option value="3">Tháng</option>
                </select>
                {{else}}
                <select class="custom-select col-sm-3 col-form-label" name="type" id="type" style="height: 35px;">
                    <option value="1" selected>Năm</option>
                    <option value="2">Quý</option>
                    <option value="3">Tháng</option>
                </select>
                {{/if}}
                {{else}}
                <select class="custom-select col-sm-3 col-form-label" name="type" id="type" style="height: 35px;">
                    <option value="1" selected>Năm</option>
                    <option value="2">Quý</option>
                    <option value="3">Tháng</option>
                </select>
                {{/if}}
                <input type="number" name="value1" style="height: 35px;" class="form-control col-sm-9" value="" placeholder="">
                <input type="number" name="value2" style="height: 35px;" class="form-control col-sm-9" value="" placeholder="Năm" required>
                <button class="btn btn-primary form-control col-3 mx-auto" type="submit">Lấy thông tin</button>
            </div>
        </form>
</div>
<div class="container col-11 ml-0">
<table id="example" class="table table-striped table-bordered w-80" style="width:100%">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Số lượng đã bán</th>
                <th>Thu</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.TEN_SP}}</td>
                <td>{{this.soluong}}</td>
                <td>{{this.price}}</td>
            </tr>
            {{/each}}
            <tfoot>
                <td><h4><strong>Tổng</strong></h4></td>
                <td><h4>{{tongsoluong}}</h4></td>
                <td><h4>{{tonggia}}</h4></td>
            </tfoot>
        </tbody>
    </table>
</div>
    {{#section 'footer'}}
<script>
    $(document).ready(function() {
        $("input[name='value1']").hide();
        $('#example').DataTable();
        $('#type').on('change',()=>{
            if($('#type').val() == 1){
                $("input[name='value1']").hide();
                $("input[name='value1']").attr('required',false);
                $("input[name='value2']").attr('class','form-control col-sm-9');
            }
            else{
                $("input[name='value1']").show();
                $("input[name='value1']").attr('placeholder', $('#type').val()== 2 ? "Quý":"Tháng")
                $("input[name='value1']").attr('required',true);
                $("input[name='value2']").attr('class','form-control');
            }
        })
    } );
</script>
{{/section}}